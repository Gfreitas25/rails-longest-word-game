<h1>New Game</h1>

<p><%= @letters.join(" ") %></p>

<form action="<%= game_score_path %>" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <% @letters.each do |letter| %>
    <%= hidden_field_tag "letters[]", letter %>
  <% end %>

  <%= text_field_tag :word %>
  <%= submit_tag "Play" %>
</form>
